{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        // "sourceMap": true,
        "resolveJsonModule": true,
        "lib": [
            "es6",
            "dom"
        ],
        "esModuleInterop": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "."
    ],
    "exclude": [
        "./node_modules",
        "dist"
    ]
}